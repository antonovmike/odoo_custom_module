<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Actions -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_tag_action" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- ... -->

    <!-- Menus top bar -->
    <menuitem id="estate_menu_root" name="Add new estate">
        <menuitem id="estate_property_menu_action" action="estate_property_action"/>

        <menuitem id="estate_first_level_menu" name="Tags and Types">
            <menuitem id="estate_property_tag_menu_action" action="estate_property_tag_action"/>
            <menuitem id="estate_property_type_menu_action" action="estate_property_type_action"/>
        </menuitem>
    </menuitem>
    <!-- ... -->

    <!-- Properties list view -->
    <record id="estate_property_tree_view" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>

        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="active"/>
                <field name="property_type_id"/>
                <!-- The other fields -->
            </tree>
            <tree string="Property Tags">
                <field name="tag_ids"/>
            </tree>
        </field>
    </record>
    <!-- ... -->

    <!-- Property Form View -->
    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="postcode"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                        <group>
                            <field name="bedrooms"/>
                            <field name="living_area"/>
                        </group>

                        <group>
                            <label for="commission" string="Commission"/>
                            <div>
                                <field name="commission" readonly="1"/>
                            </div>
                        </group>

                        <group>
                            <label for="total_area" string="Total Area"/>
                            <div>
                                <field name="total_area" readonly="1"/>
                            </div>
                        </group>

                        <group>
                            <label for="best_price" string="Best Price"/>
                            <div>
                                <field name="best_price" readonly="1"/>
                            </div>
                        </group>

                        <notebook>
                            <page string="Details">
                                <group>
                                    <field name="description" string="Description"/>
                                    <field name="facades" string="Facades"/>
                                    <field name="garage" string="Garage"/>
                                    <field name="garden" string="Garden"/>
                                    <field name="garden_area" string="Garden area"/>
                                    <field name="garden_orientation" string="Garden orientation"/>
                                </group>
                            </page>

                            <page string="Availability">
                                <group>
                                    <field name="date_availability" string="Date availability"/>
                                    <field name="active" string="Active"/>
                                    <field name="state" string="State"/>
                                </group>
                            </page>

                            <page name="buyer_and_salesperson" string="Buyer and Salesperson" sequence="3">
                                <group>
                                    <field name="buyer_id"/>
                                    <field name="salesperson_id"/>
                                </group>
                            </page>

                            <page name="type_and_tags" string="Type and Tags" sequence="4">
                                <group>
                                    <field name="property_type_id"/>
                                    <field name="tag_ids" widget="many2many_tags"/>
                                </group>
                            </page>

                            <page name="offers_tab" string="Offers">
                                <field name="offer_ids" widget="one2many_offers"/>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- ... -->

    <!-- Search View -->
    <record id="estate_property_search_view" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <filter name="name"/>
                <filter name="postcode"/>
                <filter name="expected_price"/>
                <filter name="bedrooms"/>
                <filter name="living_area"/>
                <filter name="facades"/>

                <filter name="state" string="Property State" domain="[('state','in',['new','offer_received'])]"/>

                <filter name="property_type_id" string="Property Type" domain="[]"/>

                <group expand="0" string="Group by">
                    <filter name="postcode" string="Postcode" domain="[]" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>
    <!-- ... -->

    <!-- Property Type Views -->
    <!-- <record id="estate_property_type_tree_view" model="ir.ui.view">
        <field name="name">estate.property.type.tree</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree string="Property Types">
                <field name="name"/>
                <field name="type"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_type_form_view" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Property Type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="type"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record> -->
    <!-- ... -->

    <!-- Tree View -->
    <record id="estate_property_offer_tree_view" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Property Offers">
                <field name="property_id"/>
                <field name="price"/>
                <field name="partner_id"/>
                <field name="status"/>
                <field name="validity"/>
                <field name="date_deadline"/>
            </tree>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="estate_property_offer_form_view" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property Offer">
                <sheet>
                    <group>
                        <field name="property_id"/>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="status"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
